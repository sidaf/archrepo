packages=$(find . -maxdepth 3 -name PKGBUILD | cut -d'/' -f 2)

if [ "${packages}" = "" ]; then
  echo "No packages found"
  exit
fi

for pkgname in ${packages}; do
	pkgdir="./${pkgname}"

  if [ ! -d "${pkgdir}" ]; then
    echo "Package ${pkgname} not found"
    continue
  fi
  if [ ! -f "${pkgdir}/PKGBUILD" ]; then
    echo "Cannot find PKGBUILD in ${pkgdir}"
    continue
  fi

  # Build package
	cd "${pkgdir}"
	ppa-build
	cd ..
done

